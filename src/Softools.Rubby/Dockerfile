FROM mcr.microsoft.com/dotnet/runtime:9.0 AS base
USER $APP_UID
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["Softools.Rubby/Softools.Rubby.csproj", "Softools.Rubby/"]
RUN dotnet restore "Softools.Rubby/Softools.Rubby.csproj"
COPY . .
WORKDIR "/src/Softools.Rubby"
RUN dotnet build "./Softools.Rubby.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "./Softools.Rubby.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Softools.Rubby.dll"]
